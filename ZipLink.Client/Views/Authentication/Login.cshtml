@model LoginVM;

@{
	ViewData["Title"] = "Login To Your Account";
}

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h4 class="form-header">Login to your Account</h4>

		<div class="row">
			<div class="col-md-8 offset-md-2">

				<form
					asp-controller="Authentication"
					asp-action="LoginSubmitted"
				>

				<div class="form-group mb-3">
					<label for="emailAddress">Email Address</label>
					<input type="email" asp-for="EmailAddress" class="form-control" id="emailAddress" placeholder="Enter Email"/>
					<small id="emailAddressSm" class="form-text text-muted">Email address is not shared</small> <br/>
					<span class="text-danger" asp-validation-for="EmailAddress"></span>
				</div>

					<div class="form-group mb-3">
					<label for="password">Password</label>
					<input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter Password"/>
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>

				<button type="submit" class="btn-outline-success mt-2 btn-login">Log In</button>
					
				</form>
			</div>
		</div>
	</div>
</div>
