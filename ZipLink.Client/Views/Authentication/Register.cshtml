@model RegisterVM;

@{
	ViewData["Title"] = "Sign Up For A New Account";
}

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h4 class="form-header">Sign Up</h4>

		<div class="row">
			<div class="col-md-8 offset-md-2">

				<form asp-controller="Authentication"
					  asp-action="RegisterUser">

					  <div asp-validation-summary="All" class="text-danger"></div>

					<div class="form-group mb-3">
						<label for="fullName">Full Name</label>
						<input type="text" asp-for="FullName" class="form-control" id="fullName" placeholder="Enter Full Name" />
						<span asp-validation-for="FullName" class="text-danger"></span>
					</div>

					<div class="form-group mb-3">
						<label for="emailAddress">Email Address</label>
						<input type="email" asp-for="EmailAddress" class="form-control" id="emailAddress" placeholder="Enter Email" />
						<small id="emailAddressSm" class="form-text text-muted">Email address is not shared</small> <br/>
						<span asp-validation-for="EmailAddress" class="text-danger"></span>
					</div>

					

					<div class="form-group mb-3">
						<label for="password">Password</label>
						<input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter Password" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<div class="form-group mb-3">
						<label for="confirmPassword">Confirm Password</label>
						<input type="password" class="form-control" asp-for="ConfirmPassword" id="confirmPassword" placeholder="Re-enter Password" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>

					<button type="submit" class="btn-outline-success mt-2 btn-register">Register</button>

				</form>
			</div>
		</div>
	</div>
</div>
